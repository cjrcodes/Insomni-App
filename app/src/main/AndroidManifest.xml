<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cjrcodes.insomniapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity
            android:name=".activities.TimeTaskActivity"
            android:exported="true"
            android:label="@string/title_activity_time_task" />
        <activity
            android:name=".activities.CreateTimeTaskActivity"
            android:exported="true"
            android:label="@string/title_activity_create_time_task" />

        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <uses-library
            android:name="com.google.android.wearable"
            android:required="true" />
    </application>

    <queries>
        <package android:name="com.google.android.wearable.healthservices" />
    </queries>

    <uses-feature android:name="android.hardware.type.watch" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

</manifest>